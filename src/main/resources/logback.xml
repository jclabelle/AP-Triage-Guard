<configuration>

    <!-- Environment-driven log levels -->
    <property name="ROOT_LOG_LEVEL" value="${ROOT_LOG_LEVEL:-INFO}"/>
    <property name="ADK_LOG_LEVEL" value="${ADK_LOG_LEVEL:-INFO}"/>
    <property name="ADK_LLM_LOG_LEVEL" value="${ADK_LLM_LOG_LEVEL:-INFO}"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log file appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/minimal-agent.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Default for everything -->
    <root level="${ROOT_LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- General ADK framework logs -->
    <logger name="com.google.adk" level="${ADK_LOG_LEVEL}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Detailed LLM/tool logging from the built-in LoggingPlugin -->
    <logger name="com.google.adk.plugins.LoggingPlugin" level="${ADK_LLM_LOG_LEVEL}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

</configuration>
